<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.qut.cab302.wehab.EditReminders"
            prefHeight="800.0" prefWidth="1280.0">

    <!-- Main VBox Container -->
    <VBox alignment="CENTER" spacing="20" style="-fx-padding: 40;" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0">

        <!-- Back Button -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Button text="Back" style="-fx-background-color: #A9A9A9; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" />
        </HBox>

        <!-- Title -->
        <Text text="Edit Reminder" style="-fx-font-size: 36px; -fx-font-weight: bold;" />

        <!-- Label Input -->
        <VBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Label:" style="-fx-font-size: 16px;" />
            <TextField text="Take Panadol" style="-fx-background-color: #D3D3D3; -fx-font-size: 16px; -fx-padding: 10px;" />
        </VBox>

        <!-- Description Input -->
        <VBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Description" style="-fx-font-size: 16px;" />
            <TextArea text="Take 1 tablet" style="-fx-background-color: #D3D3D3; -fx-font-size: 16px; -fx-padding: 10px;" />
        </VBox>

        <!-- Time Picker and Days Selection -->
        <HBox alignment="CENTER" spacing="50">

            <!-- Time Picker -->
            <VBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Start Time:" style="-fx-font-size: 16px;" />
                <!-- Placeholder for Time Picker (can be replaced with a custom control or widget) -->
                <TextField promptText="2:45 PM" style="-fx-background-color: #D3D3D3; -fx-font-size: 16px; -fx-padding: 10px;" />
            </VBox>

            <!-- Days of the Week -->
            <VBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Days:" style="-fx-font-size: 16px;" />
                <HBox spacing="10">
                    <!-- Day Buttons -->
                    <Button text="S" style="-fx-background-color: #D3D3D3; -fx-background-radius: 50%; -fx-padding: 10px;" />
                    <Button text="M" style="-fx-background-color: #808080; -fx-background-radius: 50%; -fx-text-fill: white; -fx-padding: 10px;" />
                    <Button text="T" style="-fx-background-color: #808080; -fx-background-radius: 50%; -fx-text-fill: white; -fx-padding: 10px;" />
                    <Button text="W" style="-fx-background-color: #808080; -fx-background-radius: 50%; -fx-text-fill: white; -fx-padding: 10px;" />
                    <Button text="T" style="-fx-background-color: #808080; -fx-background-radius: 50%; -fx-text-fill: white; -fx-padding: 10px;" />
                    <Button text="F" style="-fx-background-color: #808080; -fx-background-radius: 50%; -fx-text-fill: white; -fx-padding: 10px;" />
                    <Button text="S" style="-fx-background-color: #D3D3D3; -fx-background-radius: 50%; -fx-padding: 10px;" />
                </HBox>
            </VBox>

        </HBox>

        <!-- Save and Delete Buttons -->
        <HBox alignment="CENTER" spacing="50" style="-fx-padding: 20 0 0 0;">
            <Button text="Save" style="-fx-background-color: #00FF7F; -fx-text-fill: black; -fx-font-size: 18px; -fx-padding: 10 40px;" />
            <Button text="Delete Reminder" style="-fx-background-color: #FF6347; -fx-text-fill: white; -fx-font-size: 18px; -fx-padding: 10 40px;" />
        </HBox>

    </VBox>

</AnchorPane>
