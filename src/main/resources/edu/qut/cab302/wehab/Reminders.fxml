<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="800.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.qut.cab302.wehab.RemindersController">

    <!-- Main Container VBox -->
    <VBox alignment="CENTER" spacing="20" style="-fx-padding: 40;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <!-- Back Button -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Button style="-fx-background-color: #A9A9A9; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Back" />
        </HBox>

        <!-- Title -->
        <Text style="-fx-font-size: 36px; -fx-font-weight: bold;" text="Reminders" />

        <!-- New Reminder Button -->
        <Button style="-fx-background-color: #A9A9A9; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10px 40px;" text="New Reminder" />

        <!-- Scrollable Reminder List -->
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <VBox spacing="20">

                <!-- Individual Reminder -->
                <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #A9A9A9; -fx-padding: 10; -fx-background-radius: 10; -fx-border-radius: 10;">
                    <VBox alignment="CENTER_LEFT" spacing="5" style="-fx-padding: 10;">
                        <Text style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Take Panadol" />
                        <Text style="-fx-font-size: 16px; -fx-background-color: black; -fx-text-fill: white; -fx-padding: 5px; -fx-background-radius: 5px;" text="Take 2 tablets" />
                    </VBox>
                    <VBox alignment="CENTER_LEFT" spacing="5" style="-fx-padding: 10;">
                        <Label style="-fx-font-weight: bold;" text="Time:" />
                        <Text style="-fx-font-size: 16px;" text="2:45 PM" />
                    </VBox>
                    <VBox alignment="CENTER_LEFT" spacing="5" style="-fx-padding: 10;">
                        <Label style="-fx-font-weight: bold;" text="Days:" />
                        <HBox spacing="5">
                            <Button fx:id="sundayButton" style="-fx-background-color: #D3D3D3; -fx-background-radius: 50%; -fx-text-fill: black;" text="S" />
                            <Button fx:id="mondayButton" style="-fx-background-color: #808080; -fx-background-radius: 50%; -fx-text-fill: white;" text="M" />
                            <Button fx:id="tuesdayButton" style="-fx-background-color: #808080; -fx-background-radius: 50%; -fx-text-fill: white;" text="T" />
                            <Button fx:id="wednesdayButton" style="-fx-background-color: #808080; -fx-background-radius: 50%; -fx-text-fill: white;" text="W" />
                            <Button fx:id="thursdayButton" style="-fx-background-color: #808080; -fx-background-radius: 50%; -fx-text-fill: white;" text="T" />
                            <Button fx:id="fridayButton" style="-fx-background-color: #808080; -fx-background-radius: 50%; -fx-text-fill: white;" text="F" />
                            <Button fx:id="saturdayButton" style="-fx-background-color: #D3D3D3; -fx-background-radius: 50%; -fx-text-fill: black;" text="S" />
                        </HBox>
                    </VBox>
                    <Button style="-fx-background-color: white; -fx-text-fill: black; -fx-padding: 5 20; -fx-background-radius: 10;" text="Edit">
                  <padding>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </padding></Button>
                </HBox>

                <!-- Additional Reminders -->
                <!-- Add more reminder blocks here for additional reminders -->

            </VBox>
        </ScrollPane>
    </VBox>
</AnchorPane>
